<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/AlexaWelcomeLayout"
    android:layout_margin="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_white">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:id="@+id/adviceCELayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloPopupOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-light"
            android:text='IMPORTANTE'
            android:textColor="#212121"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:paddingVertical="10dp"
            android:id="@+id/tvSubtituloPopupOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="6dp"
            android:textSize="15sp"
            android:text='Tu celular debe estar conectado a internet (Wi-Fi o Red m칩vil) para mantener la aplicaci칩n actualizada, de lo contrario es posible que no puedas usar algunas o incluso todas sus funciones.' />

        <com.google.android.material.textfield.TextInputEditText
            android:visibility="gone"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SSID"
            android:inputType="" />

        <com.google.android.material.textfield.TextInputEditText
            android:visibility="gone"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"
            android:inputType="" />

        <Button
            android:id="@+id/btnokWarning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner_black"
            android:gravity="center"
            android:text="Continuar de todos modos"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btncancelWarning"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_corner_white"
            android:gravity="center"
            android:text="Cerrar aplicaci칩n"
            android:textColor="#000000" />

    </LinearLayout>

</RelativeLayout>