<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/AlexaWelcomeLayout"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:cardCornerRadius="25dp"
            android:padding="20dp"
            app:cardElevation="20dp"

            >
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"

                >
            <LinearLayout


                    android:id="@+id/adviceCELayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tvTituloPopupOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:fontFamily="sans-serif-light"
                        android:text='Configuración WI-FI'
                        android:textColor="#212121"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                <TextView
                        android:visibility="gone"
                        android:id="@+id/tvSubtituloPopupOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="15sp"
                        android:text='Envía tus credenciales Wi-Fi' />

                <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="15sp"
                        android:text='SSID Principal' />

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/etSSID1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SSID 1"
                        android:inputType="" />
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/etWifiPass1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="" />



                <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="15sp"
                        android:text='SSID Secundario' />

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/etSSID2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SSID 2"
                        android:inputType="" />
                <com.google.android.material.textfield.TextInputEditText
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/etWifiPass2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contraseña"
                        android:inputType="" />

                <TextView
                        android:id="@+id/tvinfossid1"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="6dp"
                        android:textSize="15sp"
                        android:text='' />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnSendWifi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/round_corner_black"
                        android:gravity="center"
                        android:text="Enviar datos"
                        android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btndontSendwifi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="25dp"
                        android:background="@drawable/round_corner_white"
                        android:gravity="center"
                        android:text="Cancelar"
                        android:textColor="#000" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>