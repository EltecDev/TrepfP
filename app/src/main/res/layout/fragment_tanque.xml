<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".TanqueFragment">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="100dp"
            android:layout_height="350px"
            android:layout_marginStart="100dp"
            card_view:cardBackgroundColor="#2196F3"
            >
        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"/>


    </androidx.cardview.widget.CardView>

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/AlturaMaxima"

            android:layout_width="150dp"
            android:layout_height="30px"
            android:layout_marginTop="150dp"
            app:cardCornerRadius="0dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:cardBackgroundColor="#2196F3"
            />
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bordeSupAlturaMAxima"
            android:layout_width="150dp"
            android:layout_height="8px"
            app:cardCornerRadius="0dp"
            card_view:layout_constraintTop_toBottomOf="@id/AlturaMaxima"
            card_view:layout_constraintStart_toStartOf="@id/AlturaMaxima"
            card_view:layout_constraintEnd_toEndOf="@id/AlturaMaxima"
            card_view:cardBackgroundColor="@color/teal_700"
            />
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/DeltaparaSalir"
            android:layout_width="150dp"
            android:layout_height="30px"
            app:cardCornerRadius="0dp"
            card_view:layout_constraintTop_toBottomOf="@id/bordeSupAlturaMAxima"
            card_view:layout_constraintStart_toStartOf="@id/bordeSupAlturaMAxima"
            card_view:layout_constraintEnd_toEndOf="@id/bordeSupAlturaMAxima"
            card_view:cardBackgroundColor="#FF9800"
            />
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bordeInfAlturaMAxima"
            android:layout_width="150dp"
            android:layout_height="8px"
            app:cardCornerRadius="0dp"
            card_view:layout_constraintTop_toBottomOf="@id/DeltaparaSalir"
            card_view:layout_constraintStart_toStartOf="@id/DeltaparaSalir"
            card_view:layout_constraintEnd_toEndOf="@id/DeltaparaSalir"
            card_view:cardBackgroundColor="#FF2222"
            />
    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rellenoDown"
            android:layout_width="150dp"
            android:layout_height="200px"
            app:cardCornerRadius="00dp"
            card_view:layout_constraintTop_toBottomOf="@id/bordeInfAlturaMAxima"
            card_view:layout_constraintStart_toStartOf="@id/bordeInfAlturaMAxima"
            card_view:layout_constraintEnd_toEndOf="@id/bordeInfAlturaMAxima"
            card_view:cardBackgroundColor="#2196F3"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>